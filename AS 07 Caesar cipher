#Caesar cipher
word='hello'
codedword=''
decodedword=''
for i in word:
    num=ord(i)
    final=num+1
    coded=chr(final)
    codedword+=coded

for i in codedword:
    numback=ord(i)
    finalback=numback-1
    codedback=chr(finalback)
    decodedword+=codedback

print(codedword)
print(decodedword)
